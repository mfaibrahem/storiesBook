

{{#if err}}
  <div class="display-error">{{err}}</div>
{{else}}

{{/if}}

<div class="single-story">
  <div class="right">
    {{#if loggedIn}}
      {{{username story.user._id user._id story.user.name firstLetter targetUser.date nStories}}}
    {{else}}
      <a href="/api/users/{{story.user._id}}"><span>{{story.user.name}}</span></a>
    {{/if}}
  </div>
  
  <div class="left">
    <h1>{{story.title}}
      <span>( {{formateDate story.date 'D MMMM YYYY'}} )</span>
    </h1>
    <p>{{{story.details}}}</p>
    
    {{#if loggedIn}}    
        {{{editDeleteIcon story.user._id user._id story._id}}} 
    {{else}}
    {{/if}}
  </div>

</div>